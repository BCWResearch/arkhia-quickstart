{
  "name": "arkhia-quickstart",
  "version": "1.0.0",
  "description": "A set of nodejs based examples to get your started on Arkhia & Hedera Mirror node",
  "main": "index.js",
  "email": "support@arkhia.io",
  "url": "https://github.com/BCWResearch/arkhia-quickstart",
  "keywords": [
    "Arkhia",
    "Hedera",
    "Hedera MirroNode",
    "MirrorNode",
    "Hashgraph"
  ],
  "scripts": {
    "relay:get-balance-web3": "nodemon json-rpc-relay/get.balance.web3",
    "relay:get-balance-axios": "nodemon json-rpc-relay/get.balance.axios",
    "relay:listen-event-ethers": "nodemon json-rpc-relay/event.listener.ethers",
    "test:all" : "./node_modules/.bin/mocha tests/*.test.js",
    "test:config" : "./node_modules/.bin/mocha tests/config.vars.test.js",
    "test:arkhia" : "./node_modules/.bin/mocha tests/arkhia.vars.test.js",
    "test:restapi" : "./node_modules/.bin/mocha tests/rest.api.test.js",
    "test:jsonrpc" : "./node_modules/.bin/mocha tests/json.rpc.test.js",
    "js": "nodemon index.js",
    "ts": "nodemon index.ts",
    "lint": "eslint .  --ext .js --ext .mts --ext .ts",
    "lint-fix": "eslint --fix .  --ext .js --ext .mts --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "#Arkhitects",
  "license": "ISC",
  "dependencies": {
    "@hashgraph/hethers": "^1.2.2",
    "@hashgraph/sdk": "^2.16.4",
    "@truffle/hdwallet-provider": "^2.0.12",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "ethers": "^5.7.2",
    "nodemon": "^2.0.20",
    "solc": "^0.8.17",
    "solc-js": "^0.4.20",
    "truffle": "^5.7.0",
    "ts-node": "^10.9.1",
    "typescript": "4.5.2",
    "web3": "^1.8.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "dotenv": "latest",
    "eslint": "^8.24.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "hardhat": "^2.12.4",
    "typescript": "^4.8.4",
    "chai": "^4.3.6",
    "mocha": "^10.0.0"
  }
}
